
@{
    ViewData["Title"] = "Contact";
    //In case of error, the model keep the information typed
    VirtualStore.Models.Contact contact = (VirtualStore.Models.Contact) ViewData["Contact"];
}

    <main role="main">
        <br />
        <br />
        <div class="container">
            <div class="row">
                <aside class="col-md-6">
                    <h4 class="subtitle-doc">
                        # Outros contatos
                        <a href="#" data-html="code_desc_simple" class="showcode">[code]</a>
                    </h4>
                    <div id="code_desc_simple">
                        <div class="box">
                            <dl>
                                <dt>Devolução/Garantia: </dt>
                                <dd>devolucao@lojavirtual.com.br</dd>
                            </dl>
                            <dl>
                                <dt>Televendas: </dt>
                                <dd>(11) 3400-2000</dd>
                            </dl>
                            <dl>
                                <dt>SAC:</dt>
                                <dd>sac@lojavirtual.com.br</dd>
                            </dl>
                        </div>
                    </div>
                </aside>
                <aside class="col-sm-6">

                    <h4 class="subtitle-doc">
                        # Contato
                    </h4>
                    <div id="code_payment">
                        <article class="card">
                            <div class="card-body p-5">
                                @if (ViewData["MSG_S"] != null)
                                {
                                    <p class="alert alert-success">@ViewData["MSG_S"]</p>
                                }
                                @if (ViewData["MSG_E"] != null)
                                {
                                    <p class="alert alert-danger">@Html.Raw(ViewData["MSG_E"])</p>
                                }


                                <form role="form" method="post" action="/Home/ContactRegister">
                                    <div class="form-group">
                                        <label for="name">Nome</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                                            </div>
                                            <input type="text" class="form-control" name="name" placeholder=""
                                                   required="" value="@(contact != null ? contact.Name: null)">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="email">E-mail</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text"><i class="fa fa-at"></i></span>
                                            </div>
                                            <input type="text" class="form-control" id="email" name="email" placeholder="" value="@(contact != null ? contact.Email: null)">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-sm-12">
                                            <div class="form-group">
                                                <label for="comments"><span class="hidden-xs">Texto</span> </label>
                                                <div class="form-inline">
                                                    <textarea class="form-control" id="comments" name="comments" style="width:100%">@(contact != null ? contact.Comments: null)</textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <button class="subscribe btn btn-primary btn-block" type="submit"> Enviar </button>
                                </form>
                            </div>
                        </article>

                    </div>

                </aside>
            </div>
        </div>
    </main>

